@import "./index.less";
@import "./common.less";

body {
  overflow: hidden;
}

#app {
  height: 100%;

  &.colorWeak {
    filter: invert(80%);
  }

  &.userLayout {
    overflow: auto;
  }
}

.layout.ant-layout {
  height: auto;
  overflow-x: hidden;

  .ant-table-body {
    overflow-x: auto;
  }

  &.mobile {
    .sidemenu {
      .ant-header-fixedHeader {
        &.ant-header-side-opened,
        &.ant-header-side-closed {
          width: 100%;
        }
      }
    }
  }

  &.ant-layout-has-sider {
    flex-direction: row;
  }

  .trigger {
    padding: 0 24px;
    font-size: 20px;
    line-height: 46px;
    cursor: pointer;
    transition: color 0.3s;

    &:hover {
      background: rgba(0, 0, 0, 2.5%);
    }
  }

  .topmenu {
    .ant-header-fixedHeader {
      position: fixed;
      top: 0;
      right: 0;
      z-index: 9;
      width: 100%;
      transition: width 0.2s;

      &.ant-header-side-opened {
        width: 100%;
      }

      &.ant-header-side-closed {
        width: 100%;
      }
    }

    /* 必须为 topmenu  才能启用流式布局 */
    &.content-width-Fluid {
      .header-index-wide {
        max-width: unset;

        .header-index-left {
          flex: 1 1 1000px;

          .logo {
            margin-left: 25px;
          }

          .ant-menu.ant-menu-horizontal {
            flex: 1 1 calc(100vw - 190px - 238px - 25px);
            max-width: calc(100vw - 190px - 238px - 25px);
          }
        }

        .header-index-right {
          margin-right: 25px;
        }
      }

      .page-header-index-wide {
        max-width: unset;
      }
    }
  }

  .sidemenu {
    .ant-header-fixedHeader {
      position: fixed;
      top: 0;
      right: 0;
      z-index: 9;
      width: 100%;
      transition: width 0.2s;

      &.ant-header-side-opened {
        width: calc(100% - 208px);
      }

      &.ant-header-side-closed {
        width: calc(100% - 80px);
      }
    }
  }

  .header {
    position: relative;
    height: 56px;
    padding: 0 12px 0 0;

    .logo {
      position: relative;
      height: 56px;
      padding-left: 24px;
      overflow: hidden;
      line-height: 56px;
      transition: all 0.3s;

      img,
      svg,
      h1 {
        display: inline-block;
        vertical-align: middle;
      }

      img,
      svg {
        height: 48px;
      }

      h1 {
        margin: 0 0 0 12px;
        /* stylelint-disable-next-line font-family-name-quotes */
        font-family: Avenir, Helvetica Neue, Arial, Helvetica, sans-serif;
        font-size: 20px;
        font-weight: 600;
        color: #fff;
        vertical-align: middle;
      }
    }
  }

  .header,
  .top-nav-header-index {
    .user-wrapper {
      float: right;
      height: 100%;

      .action {
        display: inline-block;
        height: 100%;
        padding: 0 12px;
        color: rgba(0, 0, 0, 85%);
        cursor: pointer;
        transition: all 0.3s;

        &:hover {
          background: rgba(0, 0, 0, 2.5%);
        }

        .avatar {
          color: @primary-color;
          vertical-align: middle;
          background: hsla(0deg, 0%, 100%, 85%);
        }

        .icon {
          padding: 4px;
          font-size: 16px;
        }
      }
    }

    &.dark {
      .user-wrapper {
        .action {
          color: rgba(255, 255, 255, 85%);

          a {
            color: rgba(255, 255, 255, 85%);
          }

          &:hover {
            background: rgba(255, 255, 255, 16%);
          }
        }
      }
    }
  }

  .top-nav-header-index {
    position: relative;
    box-shadow: 0 1px 4px rgba(0, 21, 41, 8%);
    transition: background 0.3s, width 0.2s;

    .header-index-wide {
      display: flex;
      max-width: 1200px;
      height: 64px;
      padding-left: 0;
      margin: auto;

      .ant-menu.ant-menu-horizontal {
        flex: 0 1 835px;
        max-width: 835px;
        height: 64px;
        line-height: 64px;
        border: none;
      }

      .header-index-left {
        display: flex;
        flex: 0 1 1000px;

        .logo.top-nav-header {
          position: relative;
          flex: 0 0 165px;
          width: 165px;
          height: 64px;
          overflow: hidden;
          line-height: 64px;
          transition: all 0.3s;

          img,
          svg {
            display: inline-block;
            height: 48px;
            vertical-align: middle;
          }

          h1 {
            display: inline-block;
            margin: 0 0 0 12px;
            font-size: 16px;
            font-weight: 400;
            color: #fff;
            vertical-align: top;
          }
        }
      }

      .header-index-right {
        flex: 0 0 238px;
        align-self: flex-end;
        height: 64px;
        overflow: hidden;

        .content-box {
          float: right;

          .action {
            max-width: 140px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
          }
        }
      }
    }

    &.light {
      background-color: #fff;

      .header-index-wide {
        .header-index-left {
          .logo {
            h1 {
              color: #002140;
            }
          }
        }
      }
    }
  }

  // 内容区
  .layout-content {
    height: 100%;
    height: 64px;
    padding: 0 12px 0 0;
    margin: 24px 24px 0;
  }

  // footer
  .ant-layout-footer {
    padding: 0;
  }
}

.topmenu {
  .page-header-index-wide {
    max-width: 1200px;
    margin: 0 auto;
  }
}

// drawer-sider 自定义
.ant-drawer.drawer-sider {
  .sider {
    box-shadow: none;
  }

  &.dark {
    .ant-drawer-content {
      background-color: rgb(0, 21, 41);
    }
  }

  &.light {
    box-shadow: none;

    .ant-drawer-content {
      background-color: #fff;
    }
  }

  .ant-drawer-body {
    padding: 0;
  }
}

// 菜单样式
.sider {
  position: relative;
  z-index: @ant-global-sider-zindex;
  min-height: 100vh;

  .ant-layout-sider-children {
    ::-webkit-scrollbar {
      width: 6px;
      height: 6px;
    }

    .dark ::-webkit-scrollbar-thumb {
      background: hsla(0deg, 0%, 100%, 30%);
      border-radius: 3px;
    }

    .dark ::-webkit-scrollbar-thumb:hover {
      background: hsla(0deg, 0%, 100%, 50%);
    }

    .dark ::-webkit-scrollbar-track {
      background: hsla(0deg, 0%, 100%, 10%);
      border-radius: 3px;
    }

    .light ::-webkit-scrollbar-thumb {
      background: rgba(0, 0, 0, 12%);
      border-radius: 3px;
    }

    .light ::-webkit-scrollbar-thumb:hover {
      background: rgba(0, 0, 0, 30%);
    }

    .light ::-webkit-scrollbar-track {
      background: rgba(0, 0, 0, 6%);
      border-radius: 3px;
    }

    height: calc(100% - 56px);
    overflow-y: hidden;

    &:hover {
      overflow-y: auto;
    }
  }

  &.ant-fixed-sidemenu {
    position: fixed;
    height: 100%;
  }

  &.light {
    background-color: #fff;
    box-shadow: 2px 0 8px 0 rgba(29, 35, 41, 5%);

    .ant-menu-light {
      border-right-color: transparent;
    }
  }
}

// 外置的样式控制
.user-dropdown-menu {
  span {
    user-select: none;
  }
}

.user-dropdown-menu-wrapper.ant-dropdown-menu {
  padding: 4px 0;

  .ant-dropdown-menu-item {
    width: 160px;
  }

  .ant-dropdown-menu-item > .anticon:first-child,
  .ant-dropdown-menu-item > a > .anticon:first-child,
  .ant-dropdown-menu-submenu-title > .anticon:first-child .ant-dropdown-menu-submenu-title > a > .anticon:first-child {
    min-width: 12px;
    margin-right: 8px;
  }
}

// 数据列表 样式
.table-alert {
  margin-bottom: 16px;
}

.table-page-search-wrapper {
  .ant-form-inline {
    .ant-form-item {
      display: flex;
      margin-right: 0;
      margin-bottom: 24px;

      .ant-form-item-control-wrapper {
        display: inline-block;
        flex: 1 1;
        vertical-align: middle;
      }

      > .ant-form-item-label {
        width: auto;
        padding-right: 8px;
        line-height: 36px;
      }

      .ant-form-item-control {
        height: 36px;
        line-height: 36px;
      }
    }
  }

  .table-page-search-submitButtons {
    display: block;
    margin-bottom: 24px;
    white-space: nowrap;
  }
}

// 数据窗口顶部按钮与表格之间间距
.content {
  .table-operator {
    margin-bottom: 8px;

    button {
      margin-right: 8px;
    }
  }
}

.font-awesome-icon {
  color: #8c8c8c;
}
