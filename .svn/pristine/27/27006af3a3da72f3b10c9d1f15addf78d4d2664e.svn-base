                    :parameter="
                      item.setting.form.optionType === 'user'
                        ? { sortField: 'username', fieldId: item.fieldId }
                        : { fieldId: item.fieldId }
                    "
                    parentId="parentDepartmentId"
                    :displayType="item.setting.form.optionType === 'department' ? 'tree' : 'list'"
